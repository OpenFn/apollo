{
  "name": "apollo",
  "module": "platform/index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun platform/src/index.ts",
    "dev": "bun --watch platform/src/index.ts",
    "watch": "nodemon --exec bun platform/src/index.ts",
    "build": "bun build platform/src/index.ts",
    "test": "bun test platform/test ",
    "py": "poetry run python services/entry.py "
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/html": "^1.0.2",
    "elysia": "^1.0.13",
    "node-calls-python": "^1.8.4",
    "node-gyp": "^10.1.0",
    "nodemon": "^3.1.0"
  },
  "trustedDependencies": [
    "node-calls-python"
  ],
  "nodemonConfig": {
    "watch": ["platform/src", "services"],
    "ext": "ts, py"
  }
}